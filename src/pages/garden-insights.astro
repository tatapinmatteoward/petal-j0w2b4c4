---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Garden Insights: Blooming Wisdom for Your Organic Oasis";
const pageDescription = "Discover whimsical tips and organic secrets to nurture your garden with Blossom & Brew. From floral wonders to sustainable practices, unlock insights that inspire your blooming journey.";

const tips = [
  {
    title: "Companion Planting Delights",
    description: "Pair marigolds with tomatoes to ward off pests naturally. It's like a floral friendship that boosts flavors and colors!",
    icon: "fa-leaf"
  },
  {
    title: "Compost Brew Magic",
    description: "Turn kitchen scraps into nutrient-rich 'tea' for your plants. Stir in eggshells for calcium and watch your roses thrive.",
    icon: "fa-seedling"
  },
  {
    title: "Moonlit Watering Rituals",
    description: "Water your plants during the evening hours to preserve moisture and reduce evaporation. The moon's gentle glow enhances growth!",
    icon: "fa-moon"
  },
  {
    title: "Natural Pest Protection",
    description: "Plant basil near your peppers to repel aphids and mosquitoes. Nature's own pest control solution!",
    icon: "fa-bug"
  }
];

const insights = [
  {
    title: "The Art of Flower Pairing",
    excerpt: "Discover how complementary flower colors and textures create magical garden compositions.",
    category: "Floral Design"
  },
  {
    title: "Sustainable Soil Secrets",
    excerpt: "Learn how to build nutrient-rich soil naturally using kitchen compost and organic matter.",
    category: "Soil Health"
  },
  {
    title: "Seasonal Bloom Timing",
    excerpt: "Understand the lunar cycle and weather patterns to optimize your planting and harvesting schedules.",
    category: "Growth Timing"
  },
  {
    title: "Wildlife Habitat Creation",
    excerpt: "Transform your garden into a sanctuary that attracts beneficial insects and birds.",
    category: "Ecosystem"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative overflow-hidden bg-gradient-to-br from-[#f4c2c2] via-[#ffd166] to-[#f4c2c2]">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 left-10 w-32 h-32 rounded-full bg-white animate-pulse"></div>
      <div class="absolute bottom-20 right-20 w-24 h-24 rounded-full bg-white animate-pulse delay-1000"></div>
      <div class="absolute top-1/3 right-1/4 w-16 h-16 rounded-full bg-white animate-pulse delay-500"></div>
    </div>
    
    <div class="container mx-auto px-4 py-20 md:py-32 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 tracking-tight">
          Garden Insights: <br />
          <span class="font-serif italic">Blooming Wisdom</span> 
        </h1>
        <p class="text-xl md:text-2xl text-white/90 mb-8 font-serif">
          For Your Organic Oasis
        </p>
        <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-6 inline-block">
          <p class="text-lg text-white max-w-2xl mx-auto">
            Discover whimsical tips and organic secrets to nurture your garden with Blossom & Brew. 
            From floral wonders to sustainable practices, unlock insights that inspire your blooming journey.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Welcome Section -->
  <section class="py-16 bg-gradient-to-b from-white to-[#fff9f9]">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-[#4a5568] mb-6">
          Welcome to <span class="text-[#f4c2c2]">Garden Insights</span>
        </h2>
        <div class="flex justify-center mb-6">
          <div class="w-24 h-1 bg-[#ffd166] rounded-full"></div>
        </div>
        <div class="prose prose-lg max-w-none text-gray-600">
          <p class="mb-4">
            At <span class="font-serif font-bold text-[#f4c2c2]">Blossom & Brew</span>, we believe gardening is a delightful dance with nature. 
            Our <em>Garden Insights</em> page is your whimsical guide to organic floral magic, where blooming ideas 
            meet sustainable serenity. Whether you're a budding enthusiast or a seasoned green thumb, 
            dive into tips that brew up healthier, happier gardens.
          </p>
          <p>
            Embark on a journey where each tip blooms into a beautiful garden story. 
            Our insights are crafted with love for those who cherish the whimsy and wonder 
            of organic gardening.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Tips Section -->
  <section class="py-16 bg-[#fff9f9]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-[#4a5568] mb-4">
          Organic Floral Tips <span class="text-[#f4c2c2]">for Whimsical Blooms</span>
        </h2>
        <div class="flex justify-center">
          <div class="w-24 h-1 bg-[#ffd166] rounded-full"></div>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {tips.map((tip, index) => (
          <div 
            key={index} 
            class="bg-white rounded-2xl shadow-lg overflow-hidden transform transition-all duration-300 hover:-translate-y-2 hover:shadow-xl"
          >
            <div class="p-6">
              <div class="bg-[#f4c2c2]/10 w-16 h-16 rounded-full flex items-center justify-center mb-4">
                <i class={`fas ${tip.icon} text-2xl text-[#f4c2c2]`}></i>
              </div>
              <h3 class="text-xl font-bold text-[#4a5568] mb-3">{tip.title}</h3>
              <p class="text-gray-600">{tip.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Insights Grid -->
  <section class="py-16 bg-gradient-to-b from-[#fff9f9] to-[#f4c2c2]/10">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-[#4a5568] mb-4">
          Garden <span class="text-[#f4c2c2]">Insights</span>
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Explore deeper knowledge and discover how small changes can transform your garden into a flourishing paradise.
        </p>
        <div class="flex justify-center mt-6">
          <div class="w-24 h-1 bg-[#ffd166] rounded-full"></div>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        {insights.map((insight, index) => (
          <div 
            key={index} 
            class="bg-white rounded-2xl shadow-md overflow-hidden border border-[#f4c2c2]/30 group"
          >
            <div class="p-6">
              <div class="inline-block bg-[#ffd166]/10 text-[#ffd166] px-3 py-1 rounded-full text-sm font-semibold mb-3">
                {insight.category}
              </div>
              <h3 class="text-xl font-bold text-[#4a5568] mb-3 group-hover:text-[#f4c2c2] transition-colors">
                {insight.title}
              </h3>
              <p class="text-gray-600 mb-4">{insight.excerpt}</p>
              <button class="flex items-center text-[#f4c2c2] font-medium group-hover:underline">
                Read more
                <i class="fas fa-arrow-right ml-2"></i>
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-[#f4c2c2] to-[#ffd166]">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-white mb-6">
          Ready to Bloom?
        </h2>
        <p class="text-xl text-white/90 mb-8">
          Join our community of gardeners who share the joy of organic growing and sustainable practices.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="bg-white text-[#f4c2c2] hover:bg-[#fff9f9] font-bold py-3 px-8 rounded-full shadow-lg transition-all duration-300 transform hover:scale-105">
            Start Your Journey
          </button>
          <button class="bg-transparent border-2 border-white text-white hover:bg-white/10 font-bold py-3 px-8 rounded-full transition-all duration-300">
            View Newsletter
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer Note -->
  <footer class="py-12 bg-[#4a5568] text-white">
    <div class="container mx-auto px-4 text-center">
      <p class="font-serif text-lg mb-2">
        Blooming Ideas for Your Garden Journey
      </p>
      <p class="text-gray-300 max-w-2xl mx-auto">
        Blossom & Brew | Where organic gardening meets whimsical wisdom
      </p>
    </div>
  </footer>
</Layout>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
  
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  @keyframes pulse {
    0%, 100% {
      opacity: 0.1;
    }
    50% {
      opacity: 0.2;
    }
  }
</style>