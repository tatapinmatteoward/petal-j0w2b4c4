---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Petals & Poetry - Where Flowers Bloom into Verse";
const pageDescription = "Discover the enchanting world of Petals & Poetry, where the delicate beauty of flowers inspires timeless verses. Immerse yourself in vintage literary elegance, blending floral artistry with poetic expression for a truly captivating experience.";

const features = [
  {
    title: "Timeless Inspiration",
    description: "Each piece draws from classic literature and the ephemeral grace of flowers, evoking the romance of bygone eras.",
    icon: "fa-leaf"
  },
  {
    title: "Personalized Creations",
    description: "Customize your bouquet with a poem tailored to your story, or select from our gallery of evolved verses.",
    icon: "fa-book-open"
  },
  {
    title: "Literary Artistry",
    description: "Handcrafted journals for your own musings and curated books that weave stories of blooming beauty.",
    icon: "fa-feather-alt"
  }
];

const testimonials = [
  {
    quote: "The poetry card I received with my bouquet brought tears to my eyes. It perfectly captured the moment.",
    author: "Elena Richardson"
  },
  {
    quote: "Their vintage-inspired journals have become my daily companions for capturing nature's fleeting beauty.",
    author: "Marcus Thompson"
  },
  {
    quote: "Every arrangement tells a story. I've never seen flowers so beautifully intertwined with verse.",
    author: "Sophia Martinez"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-purple-900 via-indigo-800 to-violet-900 py-24 md:py-32 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 left-10 w-32 h-32 border border-dashed border-dawn-200 rounded-full"></div>
      <div class="absolute bottom-20 right-20 w-24 h-24 border border-dashed border-dawn-200 rounded-full"></div>
      <div class="absolute top-1/3 right-1/4 w-16 h-16 border border-dashed border-dawn-200 rounded-full"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-serif font-bold text-white mb-6 tracking-wide">
          Petals & Poetry
        </h1>
        <div class="h-1 w-24 bg-dawn-200 mx-auto mb-8"></div>
        <p class="text-xl md:text-2xl text-dawn-100 font-serif italic mb-10">
          Where Flowers Bloom into Verse
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-3 bg-dawn-200 text-purple-900 font-serif font-semibold rounded-full hover:bg-dawn-100 transition-all duration-300 transform hover:-translate-y-1 shadow-lg">
            Explore Collections
          </button>
          <button class="px-8 py-3 bg-transparent border-2 border-dawn-200 text-dawn-200 font-serif font-semibold rounded-full hover:bg-dawn-200 hover:text-purple-900 transition-all duration-300">
            Read Our Story
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Welcome Section -->
  <section class="py-16 md:py-24 bg-gradient-to-b from-white to-dawn-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-serif font-bold text-purple-900 mb-4">Welcome to Petals & Poetry</h2>
          <div class="h-1 w-16 bg-purple-300 mx-auto"></div>
        </div>
        
        <div class="prose prose-lg md:prose-xl max-w-none text-gray-700 leading-relaxed">
          <p class="text-center text-lg md:text-xl mb-8 italic">
            Step into a garden of words and wonders, where the whisper of petals meets the rhythm of rhyme.
          </p>
          
          <p class="mb-6">
            At Petals & Poetry, we celebrate the timeless dance between nature's elegance and the soul-stirring power of poetry. 
            Inspired by vintage literary charm, our collection invites you to explore bespoke floral arrangements adorned with 
            original verses, handcrafted journals for your own musings, and curated books that weave stories of blooming beauty.
          </p>
          
          <p>
            Whether you're seeking a romantic gesture, a thoughtful gift, or simply a moment of quiet inspiration, 
            our carefully crafted pieces bring together the enduring appeal of classical literature and the transient 
            splendor of floral artistry.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 md:py-24 bg-gradient-to-br from-purple-50 to-violet-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-purple-900 mb-4">Why Petals & Poetry?</h2>
        <div class="h-1 w-16 bg-purple-300 mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {features.map((feature, index) => (
          <div key={index} class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 border border-purple-100">
            <div class="text-4xl text-purple-700 mb-6">
              <i class={`fas ${feature.icon}`}></i>
            </div>
            <h3 class="text-xl font-serif font-bold text-purple-900 mb-4">{feature.title}</h3>
            <p class="text-gray-700">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-16 md:py-24 bg-gradient-to-br from-purple-900 to-indigo-900">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-white mb-4">What Our Community Says</h2>
        <div class="h-1 w-16 bg-dawn-200 mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial, index) => (
          <div key={index} class="bg-white bg-opacity-10 backdrop-blur-sm p-8 rounded-xl border border-dawn-200/30">
            <div class="text-dawn-200 mb-6">
              <i class="fas fa-quote-left text-3xl opacity-70"></i>
            </div>
            <p class="text-dawn-100 italic mb-6">"{testimonial.quote}"</p>
            <p class="text-dawn-200 font-serif font-semibold">â€” {testimonial.author}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-24 bg-gradient-to-r from-purple-800 to-indigo-900">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-white mb-6">Discover Your Perfect Blooming Moment</h2>
        <p class="text-xl text-dawn-200 mb-10 max-w-2xl mx-auto">
          Whether you're celebrating love, honoring friendship, or finding inspiration in nature's beauty, 
          our curated selections await your discovery.
        </p>
        <button class="px-10 py-4 bg-dawn-200 text-purple-900 font-serif font-bold rounded-full hover:bg-dawn-100 transition-all duration-300 transform hover:-translate-y-1 shadow-lg text-lg">
          Shop Our Collection
        </button>
      </div>
    </div>
  </section>
</Layout>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
  
  .font-serif {
    font-family: 'Georgia', serif;
  }
  
  .bg-gradient-to-br {
    background: linear-gradient(135deg, var(--tw-gradient-stops));
  }
  
  .bg-gradient-to-b {
    background: linear-gradient(to bottom, var(--tw-gradient-stops));
  }
  
  .bg-gradient-to-r {
    background: linear-gradient(to right, var(--tw-gradient-stops));
  }
  
  .bg-gradient-to-bl {
    background: linear-gradient(135deg, var(--tw-gradient-stops));
  }
  
  .rounded-full {
    border-radius: 50%;
  }
  
  .shadow-lg {
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }
  
  .backdrop-blur-sm {
    backdrop-filter: blur(4px);
  }
  
  @media (max-width: 768px) {
    .hero-text {
      font-size: 2rem !important;
    }
    
    .intro-text {
      font-size: 1.2rem !important;
    }
  }
</style>