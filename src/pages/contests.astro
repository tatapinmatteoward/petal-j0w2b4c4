---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Garden Contests & Blooming Challenges";
const pageDescription = "Discover exciting contests and challenges at Blossom & Brew, where your creativity flourishes in the whimsical world of organic gardening. Join us to showcase your garden designs, share tips, and win fabulous prizes!";

const contests = [
  {
    id: 1,
    title: "Floral Fantasy Photo Contest",
    icon: "ðŸŒ¸",
    description: "Capture the magic of your garden in full bloom! Share your most whimsical organic floral photos on our community forum. Entries must feature natural, pesticide-free gardens.",
    deadline: "End of May",
    prize: "Seed kits and a featured spot on our homepage"
  },
  {
    id: 2,
    title: "Eco-Design Challenge",
    icon: "ðŸŒ¿",
    description: "Design your dream sustainable garden space. Submit sketches or descriptions of eco-friendly layouts using upcycled materials.",
    deadline: "End of June",
    prize: "Green living kit and expert consultation"
  },
  {
    id: 3,
    title: "Secret Garden Showcase",
    icon: "ðŸŒ¼",
    description: "Reveal your hidden garden gems. Document secret spots in your space that bring joy and tranquility.",
    deadline: "End of July",
    prize: "Garden journal and plant care workshop"
  }
];

const features = [
  { title: "Whimsical Designs", description: "Celebrate creativity in organic gardening" },
  { title: "Natural Beauty", description: "Promote pesticide-free, sustainable practices" },
  { title: "Community Spirit", description: "Share ideas and connect with fellow gardeners" },
  { title: "Exciting Prizes", description: "Win garden essentials and expert guidance" }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-[#f4c2c2]/20 to-[#ffd166]/20"></div>
    <div class="relative container mx-auto px-4 py-24 md:py-32">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 text-[#8a3b3b] leading-tight">
          Garden Contests & <span class="text-[#ffd166]">Blooming</span> Challenges
        </h1>
        <p class="text-xl md:text-2xl text-[#8a3b3b]/90 mb-8 font-serif">
          Where creativity blossoms in the whimsical world of organic gardening
        </p>
        <div class="flex justify-center">
          <div class="inline-flex items-center px-6 py-3 bg-white rounded-full shadow-lg text-[#8a3b3b] font-medium">
            <i class="fas fa-seedling mr-2"></i>
            Join the Bloom Community
          </div>
        </div>
      </div>
    </div>
    
    <!-- Floating Elements -->
    <div class="absolute top-20 left-10 w-16 h-16 rounded-full bg-[#ffd166]/30 animate-float"></div>
    <div class="absolute bottom-32 right-20 w-20 h-20 rounded-full bg-[#f4c2c2]/30 animate-float delay-1000"></div>
    <div class="absolute top-1/3 right-1/4 w-12 h-12 rounded-full bg-[#ffd166]/20 animate-float delay-500"></div>
  </div>

  <!-- Features Section -->
  <section class="py-16 bg-gradient-to-b from-white to-[#f4c2c2]/10">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-[#8a3b3b] mb-4">Why Join Our Garden Contests?</h2>
        <p class="text-lg text-[#8a3b3b]/80 max-w-2xl mx-auto">
          Experience the joy of gardening through creative challenges that celebrate organic beauty
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {features.map((feature, index) => (
          <div key={index} class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300 border border-[#f4c2c2]/30">
            <div class="w-16 h-16 rounded-full bg-[#ffd166]/10 flex items-center justify-center mb-4">
              <i class={`fas fa-${index === 0 ? 'flower' : index === 1 ? 'leaf' : index === 2 ? 'users' : 'gift'} text-2xl text-[#ffd166]`}></i>
            </div>
            <h3 class="text-xl font-bold text-[#8a3b3b] mb-2">{feature.title}</h3>
            <p class="text-[#8a3b3b]/70">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Current Contests Section -->
  <section class="py-16 relative">
    <div class="absolute inset-0 bg-[#f4c2c2]/5"></div>
    <div class="relative container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-[#8a3b3b] mb-4">Current Contests</h2>
        <p class="text-lg text-[#8a3b3b]/80 max-w-2xl mx-auto">
          Challenge yourself with these exciting garden adventures
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {contests.map((contest) => (
          <div key={contest.id} class="bg-white rounded-2xl overflow-hidden shadow-xl transform transition-transform duration-300 hover:-translate-y-2 border border-[#f4c2c2]/30">
            <div class="p-1 bg-gradient-to-r from-[#ffd166] to-[#f4c2c2]">
              <div class="bg-white p-6">
                <div class="text-4xl mb-4">{contest.icon}</div>
                <h3 class="text-2xl font-bold text-[#8a3b3b] mb-3">{contest.title}</h3>
                <p class="text-[#8a3b3b]/80 mb-4">{contest.description}</p>
                
                <div class="flex justify-between items-center mb-4">
                  <div class="flex items-center text-[#8a3b3b]/80">
                    <i class="fas fa-calendar mr-2"></i>
                    <span class="font-medium">Deadline:</span>
                  </div>
                  <span class="bg-[#ffd166]/10 text-[#8a3b3b] px-3 py-1 rounded-full text-sm font-medium">
                    {contest.deadline}
                  </span>
                </div>
                
                <div class="flex items-center text-[#8a3b3b]/80 mb-6">
                  <i class="fas fa-gift mr-2"></i>
                  <span class="font-medium">Prize:</span>
                  <span class="ml-1">{contest.prize}</span>
                </div>
                
                <button class="w-full py-3 bg-gradient-to-r from-[#ffd166] to-[#f4c2c2] text-white font-bold rounded-lg shadow-md hover:shadow-lg transition-all duration-300 transform hover:scale-[1.02]">
                  Enter Contest
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-20 bg-gradient-to-r from-[#f4c2c2] to-[#ffd166]">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to Bloom?</h2>
        <p class="text-xl text-white/90 mb-8">
          Join thousands of garden enthusiasts in celebrating the art of organic gardening
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-4 bg-white text-[#8a3b3b] font-bold rounded-full shadow-lg hover:bg-gray-100 transition-colors duration-300">
            Explore All Contests
          </button>
          <button class="px-8 py-4 bg-transparent border-2 border-white text-white font-bold rounded-full hover:bg-white/10 transition-colors duration-300">
            Join Our Community
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="py-12 bg-[#8a3b3b] text-white">
    <div class="container mx-auto px-4 text-center">
      <h3 class="text-2xl font-bold mb-4">Blossom & Brew</h3>
      <p class="mb-6 max-w-2xl mx-auto">
        Blooming Ideas for Your Garden Journey
      </p>
      <div class="flex justify-center space-x-6 mb-8">
        <a href="#" class="text-white hover:text-[#ffd166]"><i class="fab fa-facebook-f"></i></a>
        <a href="#" class="text-white hover:text-[#ffd166]"><i class="fab fa-instagram"></i></a>
        <a href="#" class="text-white hover:text-[#ffd166]"><i class="fab fa-twitter"></i></a>
        <a href="#" class="text-white hover:text-[#ffd166]"><i class="fab fa-pinterest"></i></a>
      </div>
      <p class="text-white/70">&copy; {new Date().getFullYear()} Blossom & Brew. All rights reserved.</p>
    </div>
  </footer>
</Layout>

<style>
  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
    100% {
      transform: translateY(0px);
    }
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  
  .delay-500 {
    animation-delay: 0.5s;
  }
  
  .delay-1000 {
    animation-delay: 1s;
  }
  
  @media (max-width: 768px) {
    .animate-float {
      display: none;
    }
  }
</style>