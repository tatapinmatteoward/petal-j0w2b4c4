  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-[#f4c2c2] to-[#ffd166]">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-serif font-bold text-white mb-6">
        Ready to Bloom?
