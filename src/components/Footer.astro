---
// Frontmatter
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-pinterest', url: '#' },
  { icon: 'fab fa-facebook', url: '#' }
];
---

<footer class="bg-[#4b2e83] text-[#d8b4fe] py-8 border-t border-[#d8b4fe]">
  <div class="container mx-auto px-4 text-center">
    <p class="font-serif text-lg">&copy; {currentYear} Petals & Poetry. All rights reserved.</p>
    <div class="flex justify-center gap-6 mt-4">
      {socialLinks.map((link) => (
        <a href={link.url} class="hover:text-white transition-colors duration-300">
          <i class={link.icon + " text-2xl"}></i>
        </a>
      ))}
    </div>
    <p class="mt-6 font-serif text-sm italic">Where words bloom like flowers</p>
  </div>
</footer>